@using ProjektAPI.Models;
@model ProjektAPI.Models.KlientModel

@{
    ViewData["Title"] = "Edycja klienta";
}

<h1 style="font-weight:400" class="text-center">Edycja klientów</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-5">
         <div class="text-center text-danger">@TempData["duplikatEmail"]</div>
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <label asp-for="Id" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Id" disabled class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group row">
                <label asp-for="Imie" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Imie" required class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nazwisko" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DataUrodzenia" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="DataUrodzenia" class="form-control" />
                    <span asp-validation-for="DataUrodzenia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NumerTelefonu" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="NumerTelefonu" class="form-control" />
                    <span asp-validation-for="NumerTelefonu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Miasto" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Miasto" class="form-control" />
                    <span asp-validation-for="Miasto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ulica" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Ulica" class="form-control" />
                    <span asp-validation-for="Ulica" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="KodPocztowy" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="KodPocztowy" class="form-control" />
                    <span asp-validation-for="KodPocztowy" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Uzytkownik.Login" />
            <input type="hidden" asp-for="Uzytkownik.Haslo" />
            <input type="hidden" asp-for="Uzytkownik.RodzajUzytkownika" />

            <br />
            <div class="form-group row">
                <input type="submit" value="Zapisz zmiany" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-5">
         <div class="text-center text-danger">@TempData["duplikatLogin"]</div>
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Imie" />
            <input type="hidden" asp-for="Nazwisko" />
            <input type="hidden" asp-for="DataUrodzenia" />
            <input type="hidden" asp-for="NumerTelefonu" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Miasto" />
            <input type="hidden" asp-for="Ulica" />
            <input type="hidden" asp-for="KodPocztowy" />

            <div class="form-group row">
                <label asp-for="Uzytkownik.Id" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input disabled asp-for="Uzytkownik.Id" class="form-control" />
                    <span asp-validation-for="Uzytkownik.Id" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Uzytkownik.Login" for="login" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Uzytkownik.Login" required id="login" class="form-control" />
                    <span asp-validation-for="Uzytkownik.Login" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Uzytkownik.Haslo" for="haslo"  class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Uzytkownik.Haslo" required id="haslo" class="form-control" />
                    <span asp-validation-for="Uzytkownik.Haslo" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <label asp-for="Uzytkownik.RodzajUzytkownika" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Uzytkownik.RodzajUzytkownika" id="inputState" class="form-control">
                        <option selected>@Rola.Klient.ToString()</option>
                        <option>@Rola.Pracownik.ToString()</option>
                        <option>@Rola.Admin.ToString()</option>
                    </select>
                    <span asp-validation-for="Uzytkownik.RodzajUzytkownika" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row ">
                <input type="submit" value="Zapisz zmiany" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
