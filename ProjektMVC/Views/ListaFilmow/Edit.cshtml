@using ProjektAPI.Models
@model ProjektAPI.Models.FilmModel

@{
    ViewData["Title"] = "Edycja filmu";
}

<h1 style="font-weight:400" class="text-center">Edycja filmu</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-5">
<br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <label asp-for="Id" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Id" disabled class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group row">
                <label asp-for="Nazwa" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Nazwa" required class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Opis" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Gatunek" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Gatunek" class="form-control" />
                    <span asp-validation-for="Gatunek" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CzasTrwania" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CzasTrwania" class="form-control" />
                    <span asp-validation-for="CzasTrwania" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="OgraniczeniaWiek" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="OgraniczeniaWiek" class="form-control">
                        <option selected>@Wiek.Od18lat</option>
                        <option>@Wiek.Od16lat</option>
                        <option>@Wiek.Od12lat</option>
                        <option>@Wiek.Od7lat</option>
                        <option>@Wiek.BezOgraniczen</option>
                    </select>
                    <span asp-validation-for="OgraniczeniaWiek" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cena" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <input type="submit" value="Zapisz zmiany" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
