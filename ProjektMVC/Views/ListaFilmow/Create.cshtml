@model ProjektAPI.Models.FilmModel;
@using ProjektAPI.Models;
@{
    ViewData["Title"] = "Dodawanie nowego filmu";
}

<h1 style="font-weight:400" class="text-center">Dodawanie nowego filmu</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Nazwa" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj nazwę filmu" required asp-for="Nazwa" class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Opis" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj opis filmu" required asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Gatunek" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj gatunek" asp-for="Gatunek" required class="form-control" />
                    <span asp-validation-for="Gatunek" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CzasTrwania" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj czas trwania" type="tel" asp-for="CzasTrwania" class="form-control" />
                    <span asp-validation-for="CzasTrwania" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="OgraniczeniaWiek" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj ograniczenia wiekowe" required asp-for="OgraniczeniaWiek" class="form-control" />
                    <span asp-validation-for="OgraniczeniaWiek" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cena" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj cenę biletu" asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="form-group row">
                <input type="submit" value="Dodaj klienta" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
