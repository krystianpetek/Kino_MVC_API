@model IEnumerable<ProjektAPI.Models.RezerwacjaModel>

@{
    ViewData["Title"] = "Moje bilety";
}

<h1 style="font-weight:400" class="text-center">Moje bilety</h1>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emisja.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emisja.Film.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rzad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miejsce)
            </th>
            <th>
                Odbyło się
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emisja.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emisja.Film.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rzad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miejsce)
                </td>
                <td>
                   <div>
            <input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" disabled @check>
                </div>

                </td>
                <td>
                    @{
                        if (item.Emisja.Data.Date > DateTime.Now)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>

                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
<br />
