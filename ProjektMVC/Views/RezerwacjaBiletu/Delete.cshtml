            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Item1.Rzad)
            </dd>
            <dt class="col-sm-3">
                Nazwa filmu
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Item1.Emisja.Film.Nazwa)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Item1.Emisja.Data)
            </dt>
            <dd class="col-sm-9">
