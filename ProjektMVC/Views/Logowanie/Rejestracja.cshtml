@model ProjektAPI.Models.KlientModel;
@using ProjektAPI.Models;
@{
    ViewData["Title"] = "Rejestracja w serwisie";
}

<h1 style="font-weight:400" class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">

        
        <form asp-action="Rejestracja">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group row">
                <label asp-for="Uzytkownik.Login" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj login użytkownika" required asp-for="Uzytkownik.Login" class="form-control" />
                    <span asp-validation-for="Uzytkownik.Login" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Uzytkownik.Haslo" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj hasło użytkownika" required type="password" asp-for="Uzytkownik.Haslo" class="form-control" />
                    <span asp-validation-for="Uzytkownik.Haslo" class="text-danger"></span>
                </div>
            </div>
            
            
            <div class="form-group row">
                <label asp-for="Imie" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj imię" required asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Nazwisko" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj nazwisko" required asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DataUrodzenia" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="DataUrodzenia" required type="date" class="form-control" />
                    <span asp-validation-for="DataUrodzenia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NumerTelefonu" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj numer telefonu" type="tel" asp-for="NumerTelefonu" class="form-control" />
                    <span asp-validation-for="NumerTelefonu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj adres e-mail" required type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Miasto" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj miasto" asp-for="Miasto" class="form-control" />
                    <span asp-validation-for="Miasto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Ulica" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj ulicę i numer budynku" asp-for="Ulica" class="form-control" />
                    <span asp-validation-for="Ulica" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="KodPocztowy" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj kod pocztowy" asp-for="KodPocztowy" class="form-control" />
                    <span asp-validation-for="KodPocztowy" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <input type="submit" value="Dodaj nowe konto" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
