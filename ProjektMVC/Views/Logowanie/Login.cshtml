@model ProjektMVC.Models.LoginModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">Logowanie do serwisu</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x=>x.URL)
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Haslo" class="control-label"></label>
                <input asp-for="Haslo" class="form-control" />
                <span asp-validation-for="Haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="PamietajMnie" />@Html.DisplayNameFor(model=>model.PamietajMnie)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>

        <div><span>Nie masz jeszcze konta?</span> <a class="text-primary" asp-action="Rejestracja">Zarejestruj się!</a></div>

        <br />
        @if (!string.IsNullOrWhiteSpace(ViewBag.Register))
        {
            <div class="text-center text-danger">@ViewBag.Register</div>
        }
            <div class="text-center text-danger">@ViewBag.Message</div>
    </div>
</div>