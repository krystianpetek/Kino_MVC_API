@model ProjektAPI.Models.SalaModel

@{
    ViewData["Title"] = "Dodawanie nowej sali kinowej";
}

<h1 style="font-weight:400" class="text-center">Dodawanie nowej sali kinowej</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="NazwaSali" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj nazwę sali" asp-for="NazwaSali" class="form-control" />
                    <span asp-validation-for="NazwaSali" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IloscRzedow" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj ilość rzędów" required asp-for="IloscRzedow" class="form-control" />
                    <span asp-validation-for="IloscRzedow" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IloscMiejsc" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input placeholder="Podaj ilość miejsc" required asp-for="IloscMiejsc" class="form-control" />
                    <span asp-validation-for="IloscMiejsc" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <input type="submit" value="Dodaj sale kinową" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
