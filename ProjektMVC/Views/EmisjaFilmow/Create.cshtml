@using ProjektAPI.Models;
@model Tuple<List<FilmModel>,List<SalaModel>,EmisjaModel>;

@{
    ViewData["Title"] = "Edycja filmu";
}

<h1 style="font-weight:400" class="text-center">Dodawanie emisji filmu</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-5">
<br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item3.Id" />
            
            <div class="form-group row">
                <label asp-for="Item3.Film.Nazwa" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">

                    <select asp-for="Item3.FilmId" class="form-control">
                        <option value="">Wybierz film!</option>
                        @foreach(var item in Model.Item1)
                        {
                        <option value="@item.Id">@item.Nazwa</option>
                        }
                    </select>
                    <span asp-validation-for="Item3.Film.Nazwa" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Item3.Sala.NazwaSali" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">

                    <select asp-for="Item3.SalaId" class="form-control">
                        <option value="">Wybierz sale!</option>
                        @foreach(var item in Model.Item2)
                        {
                        <option value="@item.Id">@item.NazwaSali</option>
                        }
                    </select>
                    <span asp-validation-for="Item3.Sala.NazwaSali" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group row">
                <label asp-for="Item3.Data" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Item3.Data" class="form-control" />
                    <span asp-validation-for="Item3.Data" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Item3.Godzina" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Item3.Godzina" value="@Model.Item3.Godzina" class="form-control" />
                    <span asp-validation-for="Item3.Godzina" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <input type="submit" value="Dodaj nową emisje" class="text-light btn btn-dark" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
